---
import { type CollectionEntry } from "astro:content";
import { Image } from 'astro:assets';

type Props = {
    post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
---
<article class="articles">
    <a class="articles_image"href={`/blog/${post.slug}`}>
        <Image src={post.data.image} width={600} height={600/1.5} alt={post.data.title}
        class="rounded-2xl" />
    </a>
    <a href={`/blog/${post.slug}`} class="text-4xl">
        <h2>{post.data.title}</h2>
    </a>
    <p class="text-zinc-500 line-clamp-2">
        {post.body}
    </p>
</article>

<style lang="scss">
    .articles {
        display: grid;
        row-gap: 1rem;

        h2 {
            font-size: 2.4rem;
            letter-spacing: -1px;
        }

        p {
            max-width: 600px;
        }


    }

    .articles_image {
        margin-block-end: 2rem;
    }
</style>